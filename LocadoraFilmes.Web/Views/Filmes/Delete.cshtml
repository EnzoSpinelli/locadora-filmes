@model LocadoraFilmes.Web.Models.Filme

<h2>Deletar Filme</h2>

<h3>Tem certeza de que deseja deletar este filme?</h3>
<div>
    <h4>Filme</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.Titulo)</dt>
        <dd>@Html.DisplayFor(model => model.Titulo)</dd>

        <dt>@Html.DisplayNameFor(model => model.Diretor)</dt>
        <dd>@Html.DisplayFor(model => model.Diretor)</dd>

        <dt>@Html.DisplayNameFor(model => model.Ano)</dt>
        <dd>@Html.DisplayFor(model => model.Ano)</dd>

        <dt>@Html.DisplayNameFor(model => model.Disponivel)</dt>
        <dd>@Html.DisplayFor(model => model.Disponivel ? "Sim" : "Não")</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Deletar" class="btn btn-danger" /> |
            @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
        </div>
    }
</div>