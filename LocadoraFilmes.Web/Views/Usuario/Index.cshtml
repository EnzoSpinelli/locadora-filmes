@model IEnumerable<LocadoraFilmes.Web.Models.Usuario>

<h2>Usuários</h2>
<p>
    @Html.ActionLink("Adicionar Novo Usuário", "Create", null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.UsuarioId }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Detalhes", "Details", new { id = item.UsuarioId }, new { @class = "btn btn-info" }) |
                    @Html.ActionLink("Deletar", "Delete", new { id = item.UsuarioId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>